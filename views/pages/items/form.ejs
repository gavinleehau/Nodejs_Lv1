<!DOCTYPE html>
<html>

<head>
    <% include ./../../html/head %>
</head>

<% 
    var collection = 'item-list';
    var formCollection = 'item-form';
    var linkprefixAdmin = systemConfig.prefixAdmin + `/${collection}/`;
    var linkEditForm = systemConfig.prefixAdmin + `/${formCollection}/`;
%>

<body class="hold-transition sidebar-mini layout-fixed text-sm">
    <div class="wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <% include ./../../html/errors %>
                <div class="card card-info card-outline">
                    <form action="<%= linkprefixAdmin %>save %>" method="POST" class="mb-0">
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="name" class="col-sm-2 col-form-label text-sm-right required">Name</label>
                                <div class="col-xs-12 col-sm-8">
                                    <input type="text"  name="name" value="<%= item.name %>" class="form-control form-control-sm">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="ordering" class="col-sm-2 col-form-label text-sm-right required">Ordering</label>
                                <div class="col-xs-12 col-sm-8">
                                    <input type="number" name="ordering" value="<%= item.ordering %>" class="form-control form-control-sm">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="form[status]" class="col-sm-2 col-form-label text-sm-right">Status</label>
                                <div class="col-xs-12 col-sm-8">
                                    <select name="status" class="custom-select custom-select-sm">
                                        <option value="novalue"> - Select status - </option>
                                        <option value="active" <%= (item.status == "active") ? 'selected = "selected"' : '' %>> Active</option>
                                        <option value="inactive" <%= (item.status == "inactive") ? 'selected = "selected"' : '' %>> Inactive</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="col-12 col-sm-8 offset-sm-2">
                                <input class="form-control" name="id" value="<%= item.id %>" type="hidden">
                                <button type="submit" class="btn btn-primary">Submit </button>
                                <a href="<%= linkprefixAdmin %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
        <!-- /.content-wrapper -->


    <!-- script -->
    <% include ./../../html/script %>
</body>